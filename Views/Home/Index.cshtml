@model bool? 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.BodyClass = "index-page";

    var images = new[] {
        new { src = "/images/aspnet-svgrepo-com.svg", caption = "Aapnet" },
        new { src = "/images/blazor-svgrepo-com.svg", caption = "Blazor" },
        new { src = "/images/Logo_C_sharp.svg", caption = "CSharp" },
        new { src = "/images/object-oriented-programming-svgrepo-com.svg", caption = "object oriented" },
        new { src = "/images/principles-solid-svgrepo-com.svg", caption = "Principles solid" }
    };
}


<div class="drop-down-images" id="drop-down-images">
    <h1 id="main-header" class="main-header">
        Server-Side Rendering (SSR) and Static Site Generation (SSG)
    </h1>

    <div class="image-grid">
        @for (int i = 0; i < images.Length; i++)
        {
            <div class="image-wrapper">
                <div class="img-container" data-index="@i">
                    <img src="@images[i].src" alt="@images[i].caption" class="tech-image" />
                </div>
                <p class="caption" id="caption-@i">
                    @images[i].caption
                </p>
            </div>
        }
    </div>

    <div class="button-container" id="portfolio-button-container">
        <button class="portfolio-button" onclick="window.location.href='@Url.Action("Login", "Account")'">
                Portfolio
            </button>
       
    </div>
</div>

<script src="~/js/Index.js" asp-append-version="true"></script>


<style>
    body.index-page {
        background-image: url("/images/it.png");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        margin: 0;
        padding: 0;
    }

    .drop-down-images {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 1024px;
        margin: 2rem auto;
        padding: 2.5rem;
        background-color: rgba(0, 0, 0, 0.5);
        text-align: center;
        margin-top: 2rem;
    }

    .main-header {
        font-size: 1.5rem;
        font-weight: bold;
        color: #4cc9f0;
        margin-bottom: 1.5rem;
        opacity: 0;
        transition: transform 0.5s ease-out;
    }

    .image-grid {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
    }

    .image-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 1rem;
    }

    .img-container {
        width: 6rem;
        height: 6rem;
        background-color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        border-radius: 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        opacity: 0;
        transform: translateY(-100px);
        transition: transform 0.7s ease-out, opacity 0.7s ease-out;
    }

    .tech-image {
        width: 5rem;
        height: 5rem;
        object-fit: contain;
    }

    .caption {
        margin-top: 0.5rem;
        color: #d1d5db;
        text-align: center;
        font-weight: 500;
        opacity: 0;
        transition: opacity 0.5s ease;
    }

    .button-container {
        width: 100%;
        text-align: center;
        opacity: 0;
        margin-top: 2rem;
    }

    .portfolio-button {
        padding: 0.75rem 1.5rem;
        background-color: #4cc9f0;
        color: #1a202c;
        border-radius: 0.375rem;
        font-size: 1.125rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
        transition: background-color 0.3s;
    }

        .portfolio-button:hover {
            background-color: #3bb0e0;
        }

    .visible {
        opacity: 1 !important;
        transform: translateY(0) !important;
    }


</style>